{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6",
      "DOM"
    ],
    "module": "commonjs",
    "rootDir": ".",
    "resolveJsonModule": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
}